<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ch.epfl.biop.imaris</groupId>
    <artifactId>EasyXT</artifactId>
    <version>0.1.0-SNAPSHOT</version>

    <parent>
        <groupId>org.scijava</groupId>
        <artifactId>pom-scijava</artifactId>
        <version>29.2.1</version>
        <relativePath />
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>8</source>
                    <target>8</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <reportOutputDirectory>${project.basedir}/javadoc</reportOutputDirectory>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>scijava.public</id>
            <url>https://maven.scijava.org/content/groups/public</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>net.imagej</groupId>
            <artifactId>ij</artifactId>
        </dependency>

        <dependency>
            <groupId>net.imagej</groupId>
            <artifactId>imagej</artifactId>
        </dependency>

        <dependency>
            <groupId>net.imagej</groupId>
            <artifactId>imagej-legacy</artifactId>
        </dependency>

        <dependency>
            <groupId>ch.imaris</groupId>
            <artifactId>bridge</artifactId>
            <version>9.5.1</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/main/resources/Imaris-9.5.1/fiji/Imaris_Bridge.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>ch.imaris</groupId>
            <artifactId>bridge_utils</artifactId>
            <version>9.5.1</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/main/resources/Imaris-9.5.1/fiji/ImarisBridgeUtils.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>ch.imaris</groupId>
            <artifactId>lib</artifactId>
            <version>9.5.1</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/main/resources/Imaris-9.5.1/rtmatlab/ImarisLib.jar</systemPath>
        </dependency>

    </dependencies>

</project>